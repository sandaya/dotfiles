# navigation .., --
alias ..="cd .."
alias -- -="cd -"

# Detect which `ls` flavor is in use
if ls --color > /dev/null 2>&1; then # GNU `ls`
    colorflag="--color=always"
else # OS X `ls`
    colorflag="-G"
fi

alias ls='command ls ${colorflag}'
alias ll='ls -lhF'
alias l.='ll -d .*'
alias la='ll -A'
alias lsd='ll -d */'

alias sudo='sudo -E '

alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -i'

