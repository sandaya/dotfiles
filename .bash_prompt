# see https://wiki.archlinux.org/index.php/Color_Bash_Prompt
# see https://github.com/mathiasbynens/dotfiles for other possibilities


ColorOff='\e[0m'

White='\e[0;37m'

BWhite='\e[1;37m'
BBlue='\e[1;34m'
BRed='\e[1;31m'
BGreen='\e[1;32m'
BPurple='\e[1;35m'
BYellow='\e[1;33m'

BBRed='\e[1;41m'

function python_venv() {
	if test -z "$VIRTUAL_ENV" ; then
        echo ""
    else
        echo "[venv $(basename \"$VIRTUAL_ENV\")] "
    fi
}

function parse_git_dirty() {
    [[ $(git status 2> /dev/null | tail -n1) != *"working tree clean"* ]] && echo "*"
}

function parse_git_unpushed() {
    [[ -n $(git log --branches --not --remotes 2> /dev/null) ]] && echo "^"
}

function parse_git_branch() {
    git branch --no-color 2> /dev/null | sed -e '/^[^*]/d' -e "s/* \(.*\)/\1$(parse_git_dirty)$(parse_git_unpushed)/"
}

function user_color {
    if [[ ${EUID} == 0 ]]; then
        echo "\[$BBRed\]"
    else
        echo "\[$BRed\]"
    fi
}


export PS1="$(python_venv)$(user_color)\u\[$White\] at \[$BYellow\]\h \[$White\]in \[$BGreen\]\w \[$White\]\$([[ -n \$(git branch 2> /dev/null) ]] && echo \" on \") \[$BPurple\]\$(parse_git_branch)\n\[$BWhite\]\$ \[$ColorOff\]"
export PS2="\[$BWhite\]- \[$ColorOff\]"

